{
  "name": "ciclon-site",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vortico/ciclon-site.git"
  },
  "author": "José Antonio Perdiguero López",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vortico/flama-site/issues"
  },
  "homepage": "https://flama.dev",
  "scripts": {
    "start": "npm run dev",
    "dev": "next",
    "build": "next build",
    "postbuild": "next-sitemap",
    "serve": "next start",
    "lint": "next lint",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --write --ignore-path .gitignore --ignore-unknown",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@docsearch/react": "^3.3.0",
    "@next/mdx": "^13.0.2",
    "@tabler/icons-react": "^2.5.0",
    "contentlayer": "^0.2.9",
    "framer-motion": "^8.0.2",
    "globby": "^13.1.2",
    "next": "^13.0.2",
    "next-contentlayer": "^0.2.9",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.14.0",
    "next-sitemap": "^3.1.30",
    "next-themes": "^0.2.1",
    "prism-react-renderer": "^1.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "^18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "autoprefixer": "^10.4.13",
    "commitlint": "^17.2.0",
    "eslint": "^8.27.0",
    "eslint-config-next": "^13.0.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "reading-time": "^1.5.0",
    "rehype-code-titles": "^1.1.0",
    "rehype-slug": "^5.1.0",
    "rehype-toc": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remark-sectionize": "^1.1.1",
    "tailwindcss": "^3.2.2",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:@typescript-eslint/recommended",
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ]
    }
  }
}
